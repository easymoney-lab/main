/* pages/add/add.wxss */

.form-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.user-selector {
  display: flex;
  gap: 20rpx;
}

.user-option {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  transition: all 0.3s;
}

.user-option.active {
  background: linear-gradient(135deg, #ff6b9d 0%, #ff8fab 100%);
  color: white;
  font-weight: bold;
}

.picker {
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.location-input-wrapper {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.location-input {
  flex: 1;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.input {
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.location-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #4a90e2 0%, #5ba3f5 100%);
  color: white;
  border-radius: 12rpx;
  font-size: 26rpx;
  border: none;
  white-space: nowrap;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.location-btn:active {
  opacity: 0.8;
}

.location-icon {
  font-size: 28rpx;
}

.location-text {
  font-size: 26rpx;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  box-sizing: border-box;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.submit-btn {
  width: 100%;
  background: linear-gradient(135deg, #ff6b9d 0%, #ff8fab 100%);
  color: white;
  border-radius: 50rpx;
  padding: 28rpx;
  font-size: 32rpx;
  border: none;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 157, 0.3);
}

.submit-btn:active {
  opacity: 0.8;
}

