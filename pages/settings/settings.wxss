/* pages/settings/settings.wxss */

.settings-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #666;
  flex: 0 0 200rpx;
}

.setting-input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 0;
}

.setting-value {
  font-size: 28rpx;
  color: #ff6b9d;
  font-weight: bold;
}

.save-btn {
  width: 100%;
  background: linear-gradient(135deg, #ff6b9d 0%, #ff8fab 100%);
  color: white;
  border-radius: 50rpx;
  padding: 28rpx;
  font-size: 32rpx;
  border: none;
  margin-top: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 157, 0.3);
}

.save-btn:active {
  opacity: 0.8;
}

.danger-btn {
  width: 100%;
  background: #ff4757;
  color: white;
  border-radius: 50rpx;
  padding: 28rpx;
  font-size: 32rpx;
  border: none;
  margin-top: 30rpx;
}

.danger-btn:active {
  opacity: 0.8;
}

.about-text {
  text-align: center;
  padding: 20rpx 0;
  color: #666;
  font-size: 28rpx;
}

.version {
  display: block;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

